<%= form_for @user do |f| %>
  <%= render 'shared/errors', object: @user %>

  <div class='control-group'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class='control-group'>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <%= f.submit 'Create Account', class: 'btn btn-primary' %>

<% end %>